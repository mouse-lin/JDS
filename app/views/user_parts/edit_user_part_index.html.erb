<div id="main_wrap">
  <div id="mid">
    <div class="midCnt">
      <div class="midSubTitle"><span class="title">请输入添加用户信息</span></div>
      <div id="notvipframe">
      <div class="midSubCnt">
        <table width="200" border="0">
          <%= form_for :user, :url =>{:action => "create_user" }, :html => {:multipart => true} do |f| %>
          <tbody>
          <% if flash[:notice] %>
          <td>
            <th><font color="red"><%= flash[:notice]%></font></th>
          </td>
          <% end %>

          <tr>
            <th>用户姓名：<b class="star">*</b></th>
            <td>
              <%= f.text_field :name %> 
            </td>
          </tr>
          <tr>
            <th>身份证号：<b class="star">*</b></th>
            <td >
              <%= f.text_field :identity_card %>
            </td>
          </tr>
          <tr>
            <th>出生年月：</th>
            <td>
              <%= f.date_select :birthday, :start_year => 1960,:end_year => 2050  %>
            </td>
          </tr>
          <tr>
            <th>性别:</th>
            <td id="password_td">
              <%= f.select :sex, %w{ 男 女 } %>
            </td>
          </tr>
          <tr>
            <th>证件类型:</th>
            <td id="password_td">
              <%= f.select :card_type_id, @card_type ,{ :prompt => '请选择证件类型' } %>
            </td>
          </tr>
          <tr>
            <th>地址:</th>
            <td id="password_td">
              <%= f.text_field :address %>
            </td>
          </tr>
          <tr>
            <th>用户图片选择:</th>
            <td id="password_td">
              <%= f.file_field :image %>
            </td>
          </tr>
          <tr>
            <td>
            <%=blank(19)%>
            <%= f.submit :确定 %>
            </td>
          </tr>
          <% end %>
       </tbody></table>
      </div></div>
    </div>
  </div>
</form>  
